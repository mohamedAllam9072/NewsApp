<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.fakenews.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_navigation_home_to_headlineDetailsFragment"
            app:destination="@id/headlineDetailsFragment"/>
        <action
            android:id="@+id/action_navigation_home_to_countryFragment"
            app:destination="@id/countryFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_source"
        android:name="com.example.fakenews.ui.dashboard.DashboardFragment"
        android:label="@string/title_source"
        tools:layout="@layout/fragment_dashboard">
        <action
            android:id="@+id/action_navigation_dashboard_to_sourceDetailsFragment"
            app:destination="@id/sourceDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.fakenews.ui.notifications.NotificationsFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_notifications">
        <action
            android:id="@+id/action_navigation_notifications_to_countryFragment"
            app:destination="@id/countryFragment" />
    </fragment>
    <fragment
        android:id="@+id/headlineDetailsFragment"
        android:name="com.example.fakenews.ui.HeadlineDetails.HeadlineDetailsFragment"
        android:label="@string/title_news_details"
        tools:layout="@layout/headline_details_fragment" />
    <fragment
        android:id="@+id/sourceDetailsFragment"
        android:name="com.example.fakenews.ui.sourceDetails.SourceDetailsFragment"
        android:label="SourceDetailsFragment"
        tools:layout="@layout/source_details_fragment">
        <action
            android:id="@+id/action_sourceDetailsFragment_to_headlineDetailsFragment"
            app:destination="@id/headlineDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/countryFragment"
        android:name="com.example.fakenews.ui.notifications.country.CountryFragment"
        android:label="country_fragment"
        tools:layout="@layout/country_fragment">
        <action
            android:id="@+id/action_countryFragment_to_navigation_home"
            app:destination="@id/navigation_home">
        </action>
    </fragment>
</navigation>