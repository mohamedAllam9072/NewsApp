<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.tab_settings.country.CountryFragment">

    <TextView
        android:id="@+id/tv_default_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Default Country"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#000"
        app:layout_constraintBottom_toTopOf="@id/rv_country"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="85dp"
        tools:itemCount="12"
        app:layout_constraintTop_toBottomOf="@id/tv_default_country"
        tools:listitem="@layout/item_country" />


</androidx.constraintlayout.widget.ConstraintLayout>