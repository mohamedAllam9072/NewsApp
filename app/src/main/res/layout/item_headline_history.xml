<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="2dp">

    <ImageView
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/iv_headline_history"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv1_headline_history"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:lines="2"
        android:text="1 Dead After Man Shoots Into Crowd at Breonna Taylor Protest Park - The New York Times"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/iv_headline_history"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv2_headline_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/red"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/iv_headline_history"
        app:layout_constraintTop_toBottomOf="@id/tv1_headline_history"
        tools:text="@tools:sample/lorem[4:10]" />

    <TextView
        android:id="@+id/tv3_headline_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintLeft_toRightOf="@id/iv_headline_history"
        app:layout_constraintTop_toBottomOf="@id/tv2_headline_history"
        tools:text="@tools:sample/date/hhmm" />

</androidx.constraintlayout.widget.ConstraintLayout>